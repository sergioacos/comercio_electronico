doctype html
html
  head
    title Pedidos de Usuarios
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        padding: 20px;
      }
      h1 {
        color: #333;
        text-align: center;
      }
      .pedido-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
      }
      .pedido {
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        width: 300px;
      }
      .pedido h2 {
        color: #555;
        margin-bottom: 10px;
      }
      .producto-list {
        list-style-type: none;
        padding: 0;
      }
      .producto-item {
        background-color: #e9ecef;
        padding: 5px;
        margin-bottom: 5px;
        border-radius: 3px;
      }
      .mensaje {
        color: #777;
        text-align: center;
        margin-top: 20px;
      }
  body
    h1 Pedidos de Usuarios

    if mensaje
      p.mensaje= mensaje

    if pedidos && pedidos.length > 0
      .pedido-container
        each pedido in pedidos
          .pedido
            h2= `Pedido de: ${pedido.user ? pedido.user.name : 'Usuario desconocido'}`
            p Fecha del Pedido: #{pedido.fecha ? pedido.fecha.toLocaleDateString() : 'Fecha no disponible'}
            p Productos:
            ul.producto-list
              each producto in pedido.producto
                li.producto-item= producto.nombre
    else
      p.mensaje No hay pedidos realizados.

    a(href="/productos") Volver a la tienda

